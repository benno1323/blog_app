<div class="form">
	<%= form_for [@post, @comment], html: { multipart: true } do |f| %>
	<% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

		<div class="form-group">
			<%= f.label "Leave a comment" %>
			<%= f.text_area :content, placeholder: "Your message", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :photo %>
			<%= f.file_field :photo, class: "form-control" %>
			<%= f.hidden_field :photo_cache %> <!-- no se muestra pero igual se imprime -->
			<br>
      <%= image_tag(@comment.photo, class: "img-responsive") if @comment.photo? %>
		</div>

		<div class="form-group">
			<%= f.submit "Publish comment", class: "btn btn-danger lato" %>
		</div>



	<% end %>
</div>